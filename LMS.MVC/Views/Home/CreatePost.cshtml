
@model LMS.SharedFiles.DTOs.PostDTO

@{
    ViewData["Title"] = "Create Post";
}

<h2>New Post</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePost" asp-controller="Home" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="text">Post</label>
                <textarea placeholder="Write something.." style="height:200px" asp-for="text" class="form-control"></textarea>
                <span asp-validation-for="text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewPosts" asp-controller="Home">Back to Posts</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
